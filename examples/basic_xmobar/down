#!/usr/bin/env bash

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"

#set background
if [ -x "$(command -v feh)" ]; then
  feh --bg-scale $SCRIPTPATH/reset.jpg
fi

echo "UnloadTheme" > $XDG_RUNTIME_DIR/leftwm/commands.pipe


ps -alh | grep xmobar_control_script | awk '{print $3}' | xargs kill

pkill compton
pkill picom 
pkill xmobar
pkill xmobar

